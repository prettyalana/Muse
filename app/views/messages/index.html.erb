<h1>Messages</h1>

<div class="new-message-top">
  <%= link_to "New message", new_message_path %>
</div>

<div id="messages">
  <% @messages.each do |listing_id, messages| %>
    <h4><%= listing_id %></h4>
    <% messages.each do |message| %>
      <div class="message">
        <%= render message %>
      </div>
    <% end %>
    <div class="new-message">
      <%= link_to "New message", new_message_path(listing_id: listing_id) %>
    </div>
  <% end %>
</div>


