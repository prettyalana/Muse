<h1 class="profile-header"><%= @user.username %>'s profile</h1>
<div class="profile-info">
  <%= image_tag @user.avatar if @user.avatar.attached? %>
  <%= @user.bio %>,
  <%= @user.name%>,
  <%= @user.location %>
</div>

<h1 class="page-header">
  <%if @user.buyer? %>
    <%= @user.username %>'s listings
  <% else %>
    <%= @user.username%>'s offers
  <% end %>
</h1>

<div class="card-container" style="padding-bottom: 6.25rem;">
  <%if @user.buyer? %>
    <% @user.listings.each do |listing| %>
      <%= render "listings/card", listing: listing %>
    <% end %>
  <% else %>
    <% if @user.seller?%>
      <% @user.sent_offers.each do |offer|%>
        <%= render "offers/card", offer: offer %>
      <% end %>
    <% end %>
  <% end %>
</div>
